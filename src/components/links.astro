---
import { Image } from "astro:assets";
import ig from "../assets/instagram2.svg";
const links = [
  {
    label: "Instagram",
    url: "https://www.instagram.com/kalwabed",
  },
  {
    label: "LinkedIn",
    url: "https://www.instagram.com/kalwabed",
  },
  {
    label: "Github",
    url: "https://www.instagram.com/kalwabed",
  },
];
---

<div class="grid">
  {
    links.map((link) => (
      <section class="card">
        <div class="card-logo">
          <Image src={ig} alt="Instagram" width={50} height={50} />
        </div>
        <h2 class="card-title">{link.label}</h2>
        <p>@kalwabed</p>
      </section>
    ))
  }
</div>

<style>
  .grid {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    width: 100%;
    margin: 2.5rem 0;
    padding: 0 1rem;
    column-gap: 25px;
    row-gap: 24px;
  }

  .card {
    width: 100%;
    display: flex;
    flex-direction: column;
  }

  .card p {
    font-size: 12px;
    display: none;
  }

  .card-logo {
    position: relative;
    width: 100%;
    height: 120px;
    border-radius: 4px;
    background-image: linear-gradient(
      43deg,
      #4158d0 0%,
      #c850c0 46%,
      #ffcc70 100%
    );
  }

  .card-logo img {
    position: absolute;
    left: 58px;
    top: 32px;
  }

  .card-title {
    font-size: xl;
    font-weight: 600;
    margin-top: 4px;
    text-align: center;
  }

  @media (min-width: 768px) {
    .grid {
      padding: 0;
      grid-template-columns: repeat(3, minmax(0, 1fr));
    }

    .card-logo img {
      left: 135px;
      top: 35px;
    }
  }
</style>
