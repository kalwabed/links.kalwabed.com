---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Kalwabed Rizki | Software engineer">
  <main class="container">
    <div class="identity">
      <section class="name_title">
        <h1 class="name">Kalwabed Rizki</h1>
        <p>Software engineer, web</p>
      </section>
      <img
        src="https://github.com/kalwabed.png"
        alt="My picture"
        class="my_pic"
        width="50"
        height="50"
      />
    </div>
  </main>
</Layout>

<style>
  .container {
    max-width: 1024px;
    margin: 0 auto;
    padding-top: 2rem;
  }

  .name {
    font-size: 2.5rem;
    font-weight: bold;
  }

  .name_title {
    text-align: center;
  }

  .identity {
    display: flex;
    flex-direction: column-reverse;
    justify-content: space-between;
    align-items: center;
    width: 100%;
  }

  .my_pic {
    border-radius: 999px;
    width: 80px;
    height: 80px;
  }

  @media (min-width: 768px) {
    .name_title {
      text-align: start;
    }

    .identity {
      flex-direction: row;
    }

    .my_pic {
      width: 50px;
      height: 50px;
    }
  }
</style>
